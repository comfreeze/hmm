#!/bin/bash
SOURCE_IMAGE=dockers.comfreeze.net:443/ubuntu:nodejs

update_current_image $SOURCE_IMAGE

verbose "Running 'grunt serve $*' with args: $CONTAINER_ARGS"

not_empty "$DOCKER_CMD" "DOCKER_CMD not found!"

$DOCKER_CMD run \
 --rm=true \
 -v "$( pwd ):/overlay" \
 -p 80 \
 $CONTAINER_ARGS \
 $SOURCE_IMAGE "node $*"
