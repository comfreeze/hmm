#!/bin/bash
echo "Installing ZED"

pathadd() {
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        export PATH="${PATH:+"$PATH:"}$1"
    fi
}

if [ ! -d "~/bin" ]; then
 mkdir -p ~/bin
 pathadd ~/bin
 echo 'PATH=~/bin:$PATH' >> ~/.bash_profile
 source ~/.bash_profile
fi

cd ~/bin

# Fix quirky references
ZED=$ZED_DIR/zed
if [ -d "$ZED" ]; then
 ZED="$ZED/zed"
fi

if [ ! -f "zed" ]; then
 echo "Creating link in ~/bin"
 /bin/ln -s $ZED zed
else
 echo "Existing link intact"
fi

